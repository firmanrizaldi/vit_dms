<odoo>

<template id="colorpicker" name="Gradient Options" inherit_id="web_editor.colorpicker">
	<xpath expr="//div[@data-name='transparent_grayscale']" position="after">
		<div class="o_colorpicker_section" data-name="theme" data-icon-class="fa fa-pause">
            <button data-color="alpha-gradient">Alpha Gradient</button>
            <button data-color="beta-gradient">Beta Gradient</button>
            <button data-color="gamma-gradient">Gamma Gradient</button>
            <button data-color="delta-gradient">Delta Gradient</button>
            <button data-color="epsilon-gradient">Epsilon Gradient</button>
            <button data-color="zeta-gradient">Zeta Gradient</button>
            <button data-color="eta-gradient">Eta Gradient</button>
            <button data-color="theta-gradient">Theta Gradient</button>
        </div>
	</xpath>
</template>

</odoo>